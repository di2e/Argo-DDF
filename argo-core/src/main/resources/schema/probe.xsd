<xsd:schema version="1.0" xmlns:xsd="http://www.w3.org/2001/XMLSchema">

    <xsd:element name="probe">
        <xsd:complexType>
            <xsd:choice>
                <xsd:element name="respondTo" type="xsd:anyURI" minOccurs="1" maxOccurs="1" />
                <xsd:element name="respondToPayloadType" type="payloadType" minOccurs="1" maxOccurs="1" />
                <xsd:element name="serviceContractID" type="xsd:anyURI" minOccurs="0" maxOccurs="unbounded" />
            </xsd:choice>
            <xsd:attribute name="id" type="xsd:anyURI" use="required" />
            <xsd:attribute name="contractID" type="xsd:anyURI" use="required" />
        </xsd:complexType>
    </xsd:element>

    <xsd:simpleType name="payloadType">
        <xsd:restriction base="xsd:string">
            <xsd:enumeration value="XML" />
            <xsd:enumeration value="JSON" />
        </xsd:restriction>
    </xsd:simpleType>

</xsd:schema>
